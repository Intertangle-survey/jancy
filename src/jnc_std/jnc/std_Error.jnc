{
	uint32_t readonly m_size;
	Guid readonly m_guid;
	uint32_t readonly m_code;

	char const* const property m_description;
}

// . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . .

Error const* getLastError ();

char const* getLastErrorDescription ()
{
	return getLastError ().m_description;
}

