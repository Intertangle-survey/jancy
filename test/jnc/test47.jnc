jnc.AutomatonResult automaton scanPacket (jnc.Recognizer* recognizer)
{
	%% "open" [ \t]* [0-9]* [\r\n]
		printf ("command = open\n%s\n", recognizer.m_lexeme.m_text);

	%% "close" [ \t]* [0-9]* [\r\n]
		printf ("command = close\n%s\n", recognizer.m_lexeme.m_text);

	%% "connect" [ \t]* [0-9]* [\r\n]
		printf ("command = connect\n%s\n", recognizer.m_lexeme.m_text);

	%% .
}

int main ()
{
	printf ("main ()\n");

	jnc.Recognizer recognizer (scanPacket);

	try
	{
		recognizer.write ("op");
		recognizer.write ("en 12\ncon");
		recognizer.write ("nect5\r i cl");
		recognizer.write ("ose\t777\r ");
		recognizer.eof ();
	}

	return 0;
}

