int bindable g_data;

reactor g_reactor ()
{
	onevent bindingof (g_data) ()
	{
		printf ("g_data has changed\n");
	}
}

int main ()
{
	printf ("main\n");

	g_reactor.start ();
	g_data = 100;

	return 0; 
}

