jnc.AutomatonResult automaton fooBar (jnc.Recognizer* recognizer)
{
	%% "foo" | "bar" | "fooo"
		printf (
			"lexeme found: lexeme ofs = %d, len = %d, cur ofs = %d\n",
			recognizer.m_lexemeOffset,
			recognizer.m_lexemeLength,
			recognizer.m_currentOffset
			);

	%% .
}

//.............................................................................

// entry point

int main ()
{
	printf ("main ()\n");

	jnc.Recognizer recognizer (fooBar);

	try recognizer.write ("foo");
	try recognizer.write ("o");

	// eof not needed

	return 0;
}

