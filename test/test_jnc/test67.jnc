struct Point
{
	int m_x;
	int m_y;
}

struct MultiPoint
{
	Point m_a;
	Point m_b;
}

int main ()
{
	printf ("main ()\n");

	MultiPoint* p = new MultiPoint;

	printf (
		"sizeof (a) = %d; sizeof (b) = %d\n",
		dynamic sizeof (&p.m_a),
		dynamic sizeof (&p.m_b)
		);

	return 0;
}

